    <script src="/javascripts/demo/chart-pie-demo.js"></script>

    <%- include('../partials/footer') %>
        <script>
            $(document).ready(function () {
                // Initialize variables
                let currentPurchaseItems = [];

                // Initialize purchase when page loads
                const generateInvoice = async () => {
                    try {
                        const response = await $.ajax({
                            url: 'http://localhost:3000/purchases/invoice',
                            method: 'GET'
                        });

                        $('#invoice').val(response.invoice);
                        $('#time').val(moment().format('DD MMM YYYY HH:mm:ss'));

                        if (response.purchaseitems && response.purchaseitems.length > 0) {
                            currentPurchaseItems = response.purchaseitems;
                            updatePurchaseItemsTable();
                            updateTotalSummary();
                        }

                    } catch (error) {
                        console.error('Error:', error);
                        alert('Failed to generate invoice number');
                    }
                };

                // Update purchase items table
                const updatePurchaseItemsTable = () => {
                    $('#table-content').empty();

                    currentPurchaseItems.forEach((item, index) => {
                        const row = `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${item.itemcode}</td>
                        <td>${item.name}</td>
                        <td>${item.quantity}</td>
                        <td>${item.purchaseprice}</td>
                        <td>${item.totalprice}</td>
                        <td>
                            <button class="btn btn-danger btn-circle delete-item" data-id="${item.id}">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                        $('#table-content').append(row);
                    });
                };

                // Update total summary
                const updateTotalSummary = () => {
                    const total = currentPurchaseItems.reduce((sum, item) => sum + Number(item.totalprice), 0);
                    $('#total-summary').val(total);
                };

                // Delete item
                const deleteItem = async (id) => {
                    try {
                        const response = await $.ajax({
                            url: `http://localhost:3000/purchases/items/${id}`,
                            method: 'DELETE'
                        });

                        if (response.success) {
                            currentPurchaseItems = currentPurchaseItems.filter(item => item.id !== id);
                            updatePurchaseItemsTable();
                            updateTotalSummary();
                        }
                    } catch (error) {
                        console.error('Error deleting item:', error);
                    }
                };

                // Fetch goods data when barcode changes
                const loadGoodsData = async () => {
                    const barcode = $('#goods-barcode').val();
                    try {
                        const goods = await $.ajax({
                            url: `http://localhost:3000/purchases/${barcode}`,
                            method: 'GET'
                        });

                        $('#goods-name').val(goods.name);
                        $('#stock').val(goods.stock);
                        $('#purchase-price').val(goods.purchaseprice);
                        $('#qty').val(1);
                        $('#total-price').val((goods.purchaseprice * 1).toFixed(2));
                    } catch (error) {
                        console.error('Error fetching goods:', error);
                        resetGoodsForm();
                    }
                };

                // Reset goods form
                const resetGoodsForm = () => {
                    $('#goods-name').val('');
                    $('#stock').val('');
                    $('#purchase-price').val('');
                    $('#qty').val('');
                    $('#total-price').val('');
                };

                // Calculate total price
                const calculateTotalPrice = () => {
                    const price = parseFloat($('#purchase-price').val()) || 0;
                    const qty = parseInt($('#qty').val()) || 0;
                    $('#total-price').val((price * qty).toFixed(2));
                };

                // Add item to purchase
                const addPurchaseItem = async (e) => {
                    e.preventDefault();

                    try {
                        const invoice = $('#invoice').val();
                        const itemcode = $('#goods-barcode').val();
                        const quantity = parseInt($('#qty').val());
                        const purchaseprice = parseFloat($('#purchase-price').val());
                        const totalprice = parseFloat($('#total-price').val());

                        const newItem = await $.ajax({
                            url: 'http://localhost:3000/purchases/items/add',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({
                                invoice,
                                itemcode,
                                quantity,
                                purchaseprice,
                                totalprice
                            })
                        });

                        currentPurchaseItems.push(newItem);
                        updatePurchaseItemsTable();
                        updateTotalSummary();
                        resetGoodsForm();

                    } catch (error) {
                        console.error('Error adding item:', error);
                    }
                };

                // Complete purchase
                const finishPurchase = async (e) => {
                    e.preventDefault();

                    try {
                        const invoice = $('#invoice').val();
                        const supplierId = $('#supplier').val();
                        const totalsum = parseFloat($('#total-summary').val());

                        await $.ajax({
                            url: 'http://localhost:3000/purchases/finish',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({
                                invoice,
                                supplierId,
                                totalsum
                            })
                        });

                        window.location.href = '/purchases';
                    } catch (error) {
                        console.error('Error completing purchase:', error);
                    }
                };

                // Event listeners
                $('#goods-barcode').on('change', loadGoodsData);
                $('#qty').on('input', calculateTotalPrice);
                $('#add-purchaseitem').on('submit', addPurchaseItem);
                $('#add-purchase').on('submit', finishPurchase);
                $(document).on('click', '.delete-item', function () {
                    const id = $(this).data('id');
                    deleteItem(id);
                });

                // Initialize
                generateInvoice();
            });
        </script>